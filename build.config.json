{
    "root": "./public",
    "deployment": {
      "local": {
        "path": "public"
      },
      "remote": {
        "host": "localhost"
      },
      "rsync": {
        "options": "-avzh --delete -e ssh"
      }
    },
    "assets": {
      "base": "source/",
      "dest": "public/",
      "distribution": "dist/"
    },
    "cleanable": {
      "base"  : "public/",
      "files" : [
        "public/annotations/*", 
        "public/css/*", 
        "public/images/*", 
        "public/fonts/*",
        "public/js/*", 
        "public/patterns/*", 
        "public/images/*"
      ]
    },
    "versioning": {
      "files": [
        "./package.json",
        "./bower.json"
      ]
    },
    "nodemodulescripts": {
      "base"  : "node_modules/",
      "files" : [
        "node_modules/jquery/dist/jquery.min.js",
        "node_modules/jquery.easing/jquery.easing.min.js",
        "node_modules/popper.js/dist/umd/popper.min.js", 
        "node_modules/bootstrap/dist/js/bootstrap.min.js"
      ],
      "dest"  : "public/js/vendor/",
      "distribution"  : "dist/js/vendor/"
    },
    "nodemodulesfonts": {
      "base"  : "node_modules/",
      "files" : [
        "node_modules/@villemontreal/font-icon/icon-dist/vdm.css",
        "node_modules/@villemontreal/font-icon/icon-dist/vdm.eot", 
        "node_modules/@villemontreal/font-icon/icon-dist/vdm.svg",
        "node_modules/@villemontreal/font-icon/icon-dist/vdm.ttf",
        "node_modules/@villemontreal/font-icon/icon-dist/vdm.woff2",
        "node_modules/@villemontreal/font-icon/icon-dist/vdm.woff"
      ],
      "dest"  : "source/fonts/",
      "distribution"  : "dist/fonts/"
    },
    "nodemodulesfontsdata": {
      "input": "node_modules/@villemontreal/font-icon/icon-dist/vdm.json",
      "json": "./source/_data/icons.json",
      "sass": "./source/css/scss/_font-icon-map.scss"
    },
    "scripts": {
      "base"  : "source/js/",
      "files" : [
        "source/js/**/*.js",
        "!source/js/vendor/**"
      ],
      "dest"  : "public/js/",
      "distribution"  : "dist/js/"
    },
    "sourcemaps": {
        "base" : "source/css/",
        "files": [
          "source/css/**/**.map"
        ],
        "dest" : "./"
    },
    "scss": {
      "base" : "source/css/",
      "files": [
        "source/css/**/**.scss",
        "!source/css/pl-scss/**"
      ],
      "dest" : "public/css/",
      "distribution"  : "dist/css/"
    },
    "fonts": {
      "base" : "source/fonts/",
      "files": [
        "source/fonts/**/*"
      ],
      "dest" : "public/fonts/"
    },
    "glyphs": {
      "base" : "source/glyphs/",
      "files": [
        "source/glyphs/**/*"
      ],
      "dest" : "public/glyphs/"
    },
    "images": {
      "base" : "source/images/",
      "files": [
        "source/images/**/*"
      ],
      "dest" : "public/images/"
    },
    "imagesdist": {
      "base" : "source/images/",
      "files": [
        "source/images/**/*",
        "!source/images/pl-demo/",
        "!source/images/pl-demo/**/*"  
      ],
      "dest" : "dist/images/"
    },
    "bao": {
      "files": {
        "json": "source/bao-version.json"
      },
      "dest": "public"
    },
    "patternlab": {
      "scss": {
        "files": [
          "source/css/pl-scss/*"
        ],
        "dest": "public/css/"
      },
      "styleguide": {
        "files": [
          "core/styleguide/**"
        ],
        "dest": "public/styleguide/"
      },
      "files": [
        "source/_patterns/**/*.mustache",
        "source/_patterns/**/*.json",
        "source/_data/*.json",
        "source/_annotations/*.js"
      ]
    }
  }