<div class="wrapper-arrondissement">
  <div class="wrapper-arrondissement-header">
    <div class="row">
      {{^ selectedArrondissement}}
      <div class="col">
        <p class="mb-0">Veuillez sélectionner votre arrondissement pour obtenir l’information qui vous concerne.</p>
      </div>
      <div class="col-auto">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#selectArrondissementModal">Sélectionner</button>
      </div>
      {{/ selectedArrondissement}}
      {{# selectedArrondissement}}
      <div class="col">
        <div class="label">Arrondissement</div>
        <div class="title">{{ arrondissement }}</div>
      </div>
      <div class="col-auto">
        <button class="btn btn-secondary" data-toggle="modal" data-target="#selectArrondissementModal">Changer</button>
      </div>
      {{/ selectedArrondissement}}
    </div>
  </div>
  <div class="wrapper-arrondissement-body">
    {{^ selectedArrondissement}}
    <div class="empty-state">
      <svg width="80" height="80" viewBox="0 0 80 80" xmlns="http://www.w3.org/2000/svg">
        <title>Localisation</title>
        <path d="M40 75c-.398 0-.783-.143-1.085-.403-.243-.21-6.045-5.215-11.923-13.193-3.464-4.702-6.227-9.458-8.214-14.14C16.272 41.356 15 35.546 15 30a24.782 24.782 0 0 1 5.057-15.077 25.193 25.193 0 0 1 12.8-8.886 1.667 1.667 0 1 1 .951 3.195 21.833 21.833 0 0 0-11.093 7.705 21.473 21.473 0 0 0-4.382 13.063c0 6.39 1.96 16.667 11.297 29.367A87.958 87.958 0 0 0 40 71.08a87.96 87.96 0 0 0 10.37-11.715c5.153-7.007 11.297-17.79 11.297-29.367a21.467 21.467 0 0 0-4.439-13.14A21.833 21.833 0 0 0 46 9.176a1.667 1.667 0 1 1 .922-3.204 25.18 25.18 0 0 1 12.956 8.86A24.774 24.774 0 0 1 65 30c0 5.547-1.272 11.357-3.778 17.265-1.987 4.682-4.75 9.438-8.214 14.14-5.878 7.978-11.68 12.985-11.923 13.193-.302.26-.687.402-1.085.402zm0-66.668a1.644 1.644 0 0 1-.645-.128 1.647 1.647 0 0 1-.542-.36A1.667 1.667 0 1 1 40 8.332zm0 35c-7.364 0-13.333-5.969-13.333-13.333S32.637 16.666 40 16.666c7.364 0 13.333 5.97 13.333 13.333C53.325 37.36 47.36 43.324 40 43.332zM40 20c-5.523 0-10 4.477-10 10s4.477 10 10 10 10-4.477 10-10c-.006-5.52-4.48-9.993-10-10z"/>
      </svg>
      <p>Aucun arrondissement sélectionné.</p>
    </div>
    {{/ selectedArrondissement}}
    {{# selectedArrondissement}}
      {{# demarcheContent}}
      {{# module-content}}
        {{> templates-citoyens-demarche-content}}
      {{/ module-content}}
      {{/ demarcheContent}}
    {{/ selectedArrondissement}}
  </div>
  <!-- Modal -->
  <div class="modal fade" id="selectArrondissementModal" tabindex="-1" role="dialog" aria-labelledby="selectArrondissementModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="selectArrondissementModalLabel">Sélectionner votre arrondissement</h5>
          <button type="button" class="btn-close close" data-dismiss="modal" aria-label="Close">
            <svg width="24" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <title>Close</title>
              <path d="M12 13.414l-5.293 5.293a1 1 0 1 1-1.414-1.414L10.586 12 5.293 6.707a1 1 0 0 1 1.414-1.414l12 12a1 1 0 0 1-1.414 1.414L12 13.414zm5.293-8.121a1 1 0 0 1 1.414 1.414l-3 3a1 1 0 1 1-1.414-1.414l3-3z" fill="#ADB5BD" fill-rule="evenodd"/>
            </svg>
          </button>
        </div>
        <div class="modal-body">
        {{# dropdown}}
          <ul>
            {{# options }}
            <li>
              <a href="#">{{label}}</a>
            </li>
            {{/ options}}
          </ul>
        {{/ dropdown}}
        </div>
      </div>
    </div>
  </div>
</div>