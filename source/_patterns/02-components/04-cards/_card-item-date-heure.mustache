
{{# url}}
<a href="{{ url }}" class="card {{ classes }}">
{{/ url}}
{{^ url}}
<div class="card {{ classes }}">
{{/ url}}
  <div class="card-body {{ card-body-classes }}">
    {{^ has-bs-class}}

    {{# card-type }}
    <span class="card-type {{class}}">{{ card-type }}</span>
    {{/ card-type }}
    {{# card-date}}
    <span class="card-date {{class}}">{{ card-date }}</span>
    {{/ card-date}}
    {{# card-title }}
    <span class="card-title">{{ card-title }}</span>
    {{/ card-title }}
    {{# callToAction}}
    {{> components-button }}
    {{/ callToAction}}
    {{# list-icon-item}}
    {{> components-text-icons-list}}
    {{/ list-icon-item}}
    {{/has-bs-class}}

    {{# has-bs-class }}
    <div class="row">
      <div class="col-12 col-lg-8">
        <div class="d-flex h-100">
          <div class="d-flex flex-column">
            {{# card-type }}
            <span class="card-type {{class}}">{{ card-type }}</span>
            {{/ card-type }}
            {{# card-title }}
            <span class="card-title">{{ card-title }}</span>
            {{/ card-title }}
          </div>
          {{# has-icon}}
          <div class="card-footer d-none d-lg-flex ml-auto">
            <span class="vdm vdm-063-fleche-droite" aria-hidden="true"></span>
          </div>
          {{/ has-icon}}
        </div>
      </div>
      <div class="col-12 col-lg-4 order-last order-lg-first">
        {{> components-text-icons-list}}
      </div>
    </div>
    {{/ has-bs-class}}

  </div>
{{# url }}
</a>
{{/ url }}
{{^url}}
</div>
{{/ url}}
