<div class="alert {{ alertClass }}" role="alert">
  {{# alertIcon }}
   <div class="alert-icon-container">
    <svg width="24" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <title>{{ alertIcon.title }}</title>
      <path d="{{alertIcon.path}}" />
    </svg>
  </div>
  {{/ alertIcon }}
  {{# alertIcon }}
  <div class="alert-content">
  {{/ alertIcon }}
  {{# alertTitle }}
  <div class="alert-heading">{{ alertTitle }}</div>
	{{/ alertTitle }}
	{{{ alertText }}}
  {{# alertIcon }}
  </div>
  {{/ alertIcon }}
	{{# dismissableAlert }}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <svg width="24" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <title>Icons/24px/X</title>
      <path d="M12 13.414l-5.293 5.293a1 1 0 1 1-1.414-1.414L10.586 12 5.293 6.707a1 1 0 0 1 1.414-1.414l12 12a1 1 0 0 1-1.414 1.414L12 13.414zm5.293-8.121a1 1 0 0 1 1.414 1.414l-3 3a1 1 0 1 1-1.414-1.414l3-3z"/>
    </svg>
  </button>
	{{/ dismissableAlert }}
</div>