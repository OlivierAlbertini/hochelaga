<div class="list-group list-group-teaser list-group-complex" role="list">
  {{# listGroup}}
  <div class="list-group-item list-group-item-action" href="{{ url }}" role="listitem">
    <div class="row no-gutters">
      <div class="col-auto my-auto">
        {{> components-checkbox-item}}
      </div>
      <div class="col">
        {{# type }}
        <div class="list-group-item-type">{{ type }}</div>
        {{/ type}}
        <div class="list-group-item-title">{{ title }}</div>
        {{# infos }}
        <div class="list-group-item-content {{infosClass}}">
          {{# badge}}
          <div class="list-group-item-badge">
            {{> components-badge}}
          </div>
          {{/ badge}}
          {{# infos.infos-items }}
          <div class="list-group-item-infos {{class}}">{{{ text }}}</div>
          {{/ infos.infos-items }}
        </div>
        {{/ infos}}
      </div>
    </div>
  </div>
  {{/ listGroup}}
</div>
