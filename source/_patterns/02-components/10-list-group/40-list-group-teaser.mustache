<div class="list-group list-group-teaser" role="list">
  {{# listGroup}}
  <a class="list-group-item list-group-item-action" href="{{ url }}" role="listitem">
    <div class="row">
      <div class="col-12 col-sm-4">
        {{# media.img}}
        <div class="list-group-teaser-img" style="background-image: url('{{ src }}')">
          <span class="sr-only">{{alt}}</span>
        </div>
        {{/ media.img}}
        {{# media.placeholder}}
        <div class="list-group-teaser-img list-group-teaser-placeholder-img" style="background-image:url(https://res.cloudinary.com/villemontreal/image/upload/q_auto,f_auto,dpr_auto,w_768,c_fill/v1571398706/portail/background/texture-Small-highlight.png)">
          <span class="icon {{ icon }}" aria-hidden="true"></span>
        </div>
        {{/ media.placeholder}}
      </div>
      <div class="col-12 col-sm-8">
        {{# category }}
        <div class="list-group-item-category">{{ category }}</div>
        {{/ category}}
        <span class="list-group-item-title">{{ title }}</span>
        {{# datePublication}}
        <div class="list-group-item-publication-date">Mis Ã  jour le <time datetime="{{ dateTimeFormat}}">{{{ dateTimeText }}}</time></div>
        {{/ datePublication}}
        {{# date}}
        <div class="list-group-item-date"><time datetime="{{dateTimeFormat}}">{{{ dateTimeText }}}</time></div>
        {{/ date}}
      </div>
    </div>
  </a>
  {{/ listGroup}}
</div>
