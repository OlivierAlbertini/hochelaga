<div class="list-group list-group-teaser list-group-complex" role="list">
  {{# listGroup}}
  {{^url}}
  <div class="list-group-item list-group-item-action" role="listitem">
  {{/ url}}
  {{# url}}
  <a class="list-group-item list-group-item-action" href="{{ url }}" role="listitem">
  {{/ url}}
    <div class="row no-gutters align-items-lg-center">
      {{# listToggle}}
      <div class="col-auto">
        {{> components-checkbox-item}}
      </div>
      {{/ listToggle}}
      {{# listIcon}}
      <div class="col-auto list-group-icon{{# icon-editorial}} list-group-icon-editorial align-self-start{{/ icon-editorial}}">
        {{> styles-icon-item}}
      </div>
      {{/ listIcon}}
      <div class="col">
        <div class="row no-gutters align-items-lg-center">
          <div class="col">
            {{# type }}
            <div class="list-group-item-type">{{ type }}</div>
            {{/ type}}
            <div class="list-group-item-title">{{ title }}</div>
            {{# infos }}
            <div class="list-group-item-content {{infosClass}}">
              {{# infos.infos-items }}
              <div class="list-group-item-infos {{class}}">{{{ text }}}</div>
              {{/ infos.infos-items }}
            </div>
            {{/ infos}}
          </div>
          {{# badges}}
          <div class="{{^classes}}col-lg-auto{{/ classes}}{{# classes}} {{ classes }}{{/ classes}}">
            {{# badge}}
            {{> components-badge}}
            {{/ badge}}
          </div>
          {{/ badges}}
        </div>
      </div>
      {{# btnMore}}
      <div class="col-auto ml-2 dropdown">
      <!--
        <button class="btn btn-primary btn-reversed btn-primary btn-icon" type="button" id="dropdownMoreVertical" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" aria-label="Button action label">
          <span class="icon icon-more-vertical" aria-hidden="true"></span>
        </button>
      -->
        <button class="btn btn-primary btn-reversed btn-icon" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <span class="icon icon-more-vertical" aria-hidden="true"></span>
        </button>
        {{> components-dropdown}}
      </div>
      {{/ btnMore}}
    </div>
  {{^ url}}
  </div>
  {{/ url}}
  {{# url}}
  </a>
  {{/ url}}
  {{/ listGroup}}
</div>
