<div class="form-group {{ formGroupClass}}">
  {{^ formGroupNoLabel}}
  <label for="{{formGroupInputID}}">{{ formGroupInputLabel}}{{^ formGroupInputRequired}}<span>Facultatif</span>{{/ formGroupInputRequired}}</label>
  {{/ formGroupNoLabel}}
  <input type="{{formGroupInputType}}" class="form-control {{formGroupInputClass}}" id="{{ formGroupInputID }}" {{# formGroupInputPlaceholder}}placeholder="{{ formGroupInputPlaceholder.text}}"{{/ formGroupInputPlaceholder}}{{# formGroupInputState}} {{ formGroupInputState}}{{/ formGroupInputState}}{{# formGroupInputRequired}} required{{/ formGroupInputRequired}}>
  {{^formGroupInputError}}
  {{# formGroupInputHelpText}}
  <small id="textRequiredHelpBlock" class="form-text">{{ formGroupInputHelpText }}</small>
  {{/ formGroupInputHelpText}}
  {{/formGroupInputError}}
  {{# formGroupInputError}}
  <div class="invalid-feedback">{{ formGroupInputError.text }}</div>
  {{/ formGroupInputError}}
  {{# formGroupProgress}}
  {{> components-progress-bar-item}}
  {{/ formGroupProgress}}
</div>
