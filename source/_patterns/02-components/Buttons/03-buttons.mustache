<div class="pl-button">
  {{> components-button(buttonClass: "btn-primary", buttonText: "Primary button")}}
  {{> components-button(buttonClass: "btn-secondary", buttonText: "Secondary button")}}
  {{> components-button(buttonClass: "btn-primary btn-light", buttonText: "Primary light button")}}
  {{> components-button(buttonClass: "btn-primary", buttonText: "Disabled button", buttonState: "disabled")}}
  {{> components-button(buttonClass: "btn-link", buttonText: "Button link")}}
  {{> components-button(buttonClass: "btn-link btn-reset", buttonText: "Button Reset")}}
</div>

<div class="pl-button">
  {{> components-button(buttonClass: "btn-primary btn-sm", buttonText: "Primary small button")}}
  {{> components-button(buttonClass: "btn-secondary btn-sm", buttonText: "Secondary small button")}}
  {{> components-button(buttonClass: "btn-primary btn-light btn-sm", buttonText: "Primary light small button")}}
  {{> components-button(buttonClass: "btn-primary btn-sm", buttonText: "Disabled small button", buttonState: "disabled")}}
  {{> components-button(buttonClass: "btn-link btn-sm", buttonText: "Button link")}}
</div>

<div class="pl-button pl-gray-900 px-2 pt-4 pb-2">
  {{> components-button(buttonClass: "btn-primary btn-light", buttonText: "Primary light button")}}
  {{> components-button(buttonClass: "btn-secondary btn-light", buttonText: "Secondary light button")}}
  {{> components-button(buttonClass: "btn-primary btn-inverse", buttonText: "Primary white button")}}
  {{> components-button(buttonClass: "btn-secondary btn-inverse", buttonText: "Secondary white button")}}
</div>
