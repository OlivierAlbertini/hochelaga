{{# dropdownMenu}}
<div class="dropdown-menu {{dropdownMenuClass}}" aria-labelledby="{{ dropdownMenuID}}">
  {{# dropdownSection}}
  {{# dropdownHeader}}<span class="dropdown-header">{{dropdownHeader}}</span>{{/ dropdownHeader}}
  {{# dropdownItem}}
  <a class="dropdown-item" href="#">{{# dropdownItemIcon}}<span class="icon {{ icon-name }}" aria-hidden="true"></span>{{/ dropdownItemIcon}}{{ dropdownItemLabel}}</a>
  {{/ dropdownItem}}
  {{# dropdownSectionHasDivider}}<div class="dropdown-divider"></div>{{/ dropdownSectionHasDivider}}
  {{/ dropdownSection}}
  {{# dropdownFilters}}
    <form>
      <div class="form-group mb-0">
        {{# radios }}
        <div class="dropdown-item">
          <div class="custom-control custom-control custom-radio {{ class }} ">
            <input type="radio" id="{{ id }}" name="{{ name }}" class="custom-control-input" value="{{ id }}" {{ state }}>
            <label class="custom-control-label" for="{{ id }}">{{{ label }}}</label>
          </div>
        </div>
        {{/ radios }}
        {{# checkboxes }}
        <div class="dropdown-item">
          <div class="custom-control custom-control custom-checkbox {{ class }}">
            <input type="checkbox" class="custom-control-input" id="{{ id }}" value="{{ id }}" {{ state }}>
            <label class="custom-control-label" for="{{ id }}">{{{ label }}}</label>
          </div>
        </div>
        {{/ checkboxes }}
      </div>
    </form>
  {{/ dropdownFilters}}
</div>
{{/ dropdownMenu}}