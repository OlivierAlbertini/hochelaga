{{# nav-filters }}
<section id="nav-filters" class="section-filters">
  <div class="container">
    <!-- Nav Modal on mobile, becomes static nav with dropdowns on tablets and up -->
    <div class="nav-modal modal modal-left-pane fade" id="{{ navModalID }}" aria-labelledby="navFiltersModalLabel">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header d-flex d-md-none">
            <h5 class="modal-title" id="navFiltersModalLabel">Filtres de recherche</h5>
            <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal">Recherche</button>
          </div>
          <div class="modal-body">
            <ul class="nav nav-filters">
              {{# nav.navItem }}
              <li class="nav-item dropdown {{ dropdownClass }}">
                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false" data-display="static">{{ title }}</a>
                <div class="dropdown-menu {{ dropdownMenuClass }}">
                  <form>
                    {{# radios }}
                    <div class="dropdown-item form-group">
                      <div class="custom-control custom-radio {{ class }} ">
                        <input type="radio" id="{{ id }}" name="{{ name }}" class="custom-control-input" value="{{ id }}" {{ state }}>
                        <label class="custom-control-label" for="{{ id }}">{{{ label }}}</label>
                      </div>
                    </div>
                    {{/ radios }}
                    {{# checkboxes }}
                    <div class="dropdown-item form-group">
                      <div class="custom-control custom-checkbox {{ class }}">
                        <input type="checkbox" class="custom-control-input" id="{{ id }}" value="{{ id }}" {{ state }}>
                        <label class="custom-control-label" for="{{ id }}">{{{ label }}}</label>
                      </div>
                    </div>
                    {{/ checkboxes }}
                    {{# dates }}
                    <div class="dropdown-item">
                      This component is not yet available.
                    </div>
                    {{/ dates }}
                  </form>
                </div>
              </li>
              {{/ nav.navItem }}
            </ul>

            {{# filters-applied }}
            <div class="row d-md-none">
              <div class="col-12 filters-applied mt-4">
                <span class="sr-only">Filtres sélectionnés : </span>
                {{> styles-badges}}
                {{> styles-button(buttonClass: "btn-link btn-sm btn-reset",buttonText: "Tout effacer")}}
              </div>
            </div>
            {{/ filters-applied }}

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<div class="container">
  <div class="row">
    <div class="col-12 d-block d-md-none pt-4">
      <button type="button" class="btn btn-secondary btn-block" data-toggle="modal" data-target="#{{ navModalID }}" data-backdrop="false">
        Filtres de recherche
      </button>
    </div>
  </div>
</div>
{{/ nav-filters }}

