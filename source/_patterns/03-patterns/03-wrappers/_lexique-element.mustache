<div class="bg-white p-2 sticky-top" id="navLexique">
  <ul class="d-flex flex-wrap list-unstyled mb-n1">
    {{# lexiqueSection}}
    <li class="mr-2 mb-1 font-size-base-interface">
      {{# content}}
      <a href="#{{ id }}" class="js-scroll-trigger-vda">{{ label }}</a>
      {{/ content}}
      {{^ content}}
      <span class="text-muted font-weight-bold">{{ label }}</span>
      {{/ content}}
    </li>
    {{/ lexiqueSection}}
  </ul>
</div>
<div class="lexique-content p-2">
  {{# lexiqueSection}}
  <div class="border-top pt-2" id="{{ id }}">
    <div class="h2 text-muted mb-2">{{ label }}</div>
    {{# content}}
    <div class="lexique-content">
      {{> styles-definition-list}}
    </div>
    {{/ content}}
  </div>
  {{/ lexiqueSection}}
  <div id="lower-buffer"></div>
</div>
