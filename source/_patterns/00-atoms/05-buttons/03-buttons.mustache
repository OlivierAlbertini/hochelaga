<div class="pl-button">
  {{> atoms-button(buttonClass: btn-primary, buttonText: "Primary button")}}
  {{> atoms-button(buttonClass: btn-secondary, buttonText: "Secondary button")}}
  {{> atoms-button(buttonClass: btn-primary, buttonText: "Disabled button", buttonState: "disabled")}}
  {{> atoms-button(buttonClass: btn-link, buttonText: "Button link")}}
</div>
<div class="pl-button">
  {{> atoms-button(buttonClass: "btn-primary btn-sm", buttonText: "Primary small button")}}
  {{> atoms-button(buttonClass: "btn-secondary btn-sm", buttonText: "Secondary small button")}}
  {{> atoms-button(buttonClass: btn-primary btn-sm, buttonText: "Disabled small button", buttonState: "disabled")}}
  {{> atoms-button(buttonClass: btn-link btn-sm, buttonText: "Button link")}}
</div>
