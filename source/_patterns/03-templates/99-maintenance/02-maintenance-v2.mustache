
<header role="banner">
  <nav class="navbar navbar-light navbar-expand justify-content-between" role="navigation">
    <div class="navbar-brand mx-auto">
      <img src="../../images/logos/vdm-logo.svg" class="brand-logo" alt="Logo - Ville de Montréal" />
    </div>
  </nav>
</header>

<main class="main-content" id="main-content" aria-label="Main Content">

  <div class="region-content {{ regionMainClasses }}">
    <div class="container">
      <!-- FR -->
      <section class="section-fr">
        <div class="row">
          <div class="col-lg-8 offset-lg-2 text-center">
            <div class="pb-4">
              <span class="vdm vdm-037-horloge vdm-5x text-danger" aria-hidden="true"></span>
            </div>
            <h1 class="h3">Désolé, le site est en maintenance jusqu'à&nbsp;17&nbsp;h.</h1>
            <p class="font-size-xl">On se revoit plus tard.</p>
          </div>
        </div>
      </section>
      <div class="divider-brand divider-lg pt-2 pb-6"></div>
      <!-- EN -->
      <section class="section-en pb-4">
        <div class="row ">
          <div class="col-lg-8 offset-lg-2 text-center">
            <h1 class="h3">We're sorry - the site is under maintenance until&nbsp;5&nbsp;p.m.</h1>
            <p class="font-size-xl">We'll see you later.</p>
          </div>
        </div>
      </section>
      <section class="row">
        <div class="col-lg-8 offset-lg-2">
          <div class="row cards {{ cards.classes }}">
            {{# cards.card-item }}
            <div class="{{ cards.bsgrid-classes }}">
              <div class="d-block w-100">
                {{> molecules-card-item }}
                <div class="text-center d-block pb-4">
                  <a href="{{ url-en }}">{{ card-title-en }}</a>
                </div>
              </div>
            </div>
            {{/ cards.card-item }}
          </div>
        </div>
      </section>
    </div>
  </div>
</main>
