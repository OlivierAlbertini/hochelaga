
<header role="banner">
  <nav class="navbar navbar-light navbar-expand justify-content-between" role="navigation">
    <div class="navbar-brand mx-auto">
      <img src="../../images/logos/vdm-logo.svg" class="brand-logo" alt="Logo - Ville de Montréal" />
    </div>
  </nav>
</header>

<main class="main-content bg-gray-sky" id="main-content" aria-label="Main Content">

  <div class="region-content {{ regionMainClasses }}">
    <div class="container">
      <!-- FR -->
      <section class="section-fr">
        <div class="row">
          <div class="col-lg-8 offset-lg-2 text-center">
            <div class="pb-4">
              <span class="vdm vdm-037-horloge vdm-5x text-danger" aria-hidden="true"></span>
            </div>
            <h1 class="h3">Désolé, le site est en maintenance jusqu'à 14 h.</h1>
            <p class="font-size-xl">On se revoit plus tard.</p>
            <div class="row cards {{ cards.classes }}">
              {{# cards.card-item }}
              <div class="{{ cards.bsgrid-classes }}">
                {{> molecules-card-item }}
              </div>
              {{/ cards.card-item }}
            </div>
          </div>
        </div>
      </section>
      <div class="divider-brand divider-lg pb-8"></div>
      <!-- EN -->
      <section class="section-en">
        <div class="row ">
          <div class="col-lg-8 offset-lg-2 text-center">
            <h1 class="h3">We're sorry - the site is under maintenance until 2 p.m.</h1>
            <p class="font-size-xl">We'll see you later.</p>
            <div class="row cards {{ cards.classes }}">
              {{# cards.card-item-en }}
              <div class="{{ cards.bsgrid-classes }}">
                {{> molecules-card-item }}
              </div>
              {{/ cards.card-item-en }}
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</main>
