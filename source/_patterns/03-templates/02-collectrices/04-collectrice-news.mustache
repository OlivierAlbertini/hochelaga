{{> atoms-link-skip-to-main-content }}
{{> organisms-header-portal }}

<main class="main-content {{ pageClasses }}" id="main-content" aria-label="Main Content">

  {{> organisms-content-header }}

  <section class="page-section bg-gray-sky">
    <div class="container">
      <div class="row">
        
        <div class="col-12 col-lg-6">
          <div class="form-group">
            <div class="input-group-icon input-group-icon-left">
              {{> atoms-fonticon-item(icon-label: "002-recherche") }}
              <input type="text" class="form-control form-control-lg form-control-dark" id="text-icon-left" placeholder="Rechercher une actualitÃ©">
            </div>
          </div>
        </div>

        <div class="col-12">
          {{# cards.headings }}
          <h2 class="{{ cards.headings.class }}">{{ cards.headings.text }}</h2>
          {{/ cards.headings }}
        </div>

        <div class="col-12">
          {{# cards }}
          <div class="cards {{ cards.classes }}">
          {{# cards.card-item }}
            {{> molecules-card-item }}
          {{/ cards.card-item }}
          </div>
          {{/ cards }}
        </div>

        {{# hasPagination }}
        <div class="col-12">  
          {{> molecules-pagination("paginationClass": justify-content-center) }}
        </div>
        {{/ hasPagination }}
      </div>
    </div>
  </section>

  {{# hasFeedbackForm}}
  {{> organisms-feedback-form}}
  {{/ hasFeedbackForm }}
</main>

{{> organisms-footer-portal }}

