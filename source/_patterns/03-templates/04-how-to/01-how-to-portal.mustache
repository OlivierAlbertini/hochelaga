{{> atoms-link-skip-to-main-content }}
{{> molecules-menu-open-side }}
{{> organisms-header-portal }}
{{> molecules-breadcrumb }}

<main class="main-content {{ pageClasses }}" id="main-content" aria-label="Main Content">

  {{> organisms-content-header-portal }}

  <div class="region {{ regionMainClasses }}">
    <div class="container {{ regionMainContainerClasses }}">
      <div class="row">
        <article class="col-12 col-md-8 {{ regionMainContentClasses }}">
          {{# searchBox }}
            {{> molecules-search-field-combo-base }}
          {{/ searchBox }}
          {{> organisms-how-to-content }}
        </article>

        {{# sidebarRight }}
        <aside class="col-12 col-md-4 sidebar sidebar-right">
          How To Sidebar Right content
        </aside>
        {{/ sidebarRight }}

      </div>
    </div>
  </div>

  <section class="region region-after {{ regionAfterClasses }}">
    <div class="container">
      <div class="row">
        <div class="col-12">
          {{# howToInfos }}
            {{> organisms-how-to-infos }}
          {{/ howToInfos }}
        </div>
      </div>
    </div>
  </section>

</main>

{{> organisms-footer-portal }}
