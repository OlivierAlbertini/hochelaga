    .setHTML("<address>1411, rue Lapierre<br>Montréal (Québec) H8N 2J4</address>")
    .addTo(map);

  function defaultMarker() {
    const el = document.createElement('div');
    el.className = 'marker';
    el.style.backgroundImage = "url('../../images/marker/marker.png')";
    el.style.width = '40px';
