      </div>
    </div>
    <div class="services-header-block block-filters ml-auto">
      <ul class="nav">
        <li class="nav-item"><a href="" class="sort">Filter 1</a></li>
        <li class="nav-item"><a href="" class="sort">Filter 2</a></li>
        <li class="nav-item"><a href="" class="sort">Filter 3</a></li>
      </ul>
      {{> atoms-button(buttonClass: "btn-primary btn-sm", buttonText: "Nouvelle déclaration") }}
