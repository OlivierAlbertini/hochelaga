<div class="pl-swatches-flex">
  <div class="pl-swatches-wrapper">

    <h4 class="pl-pattern-subtitle">Actions</h4> 
    <div class="pl-swatches">
      <div class="pl-swatch pl-swatch-header">
        <div class="pl-swatch-item"></div>
        <div class="pl-swatch-item">Color</div>
        <div class="pl-swatch-item">Variable</div>
        <div class="pl-swatch-item">Hex</div>
      </div>
     <div class="pl-swatch">
        <div class="pl-swatch-item pl-swatch-item-fw"><span class="pl-swatch-square pl-action-darker"></span></div>
        <div class="pl-swatch-item" data-header="Color">Action darker</div>
        <div class="pl-swatch-item" data-header="Variable">
          <div class="select-all">$primary-darker</div>
          <div class="select-all">$action-darker</div>
        </div>
        <div class="pl-swatch-item select-all" data-header="Hex">#075B4F</div>
      </div>
     <div class="pl-swatch">
        <div class="pl-swatch-item pl-swatch-item-fw"><span class="pl-swatch-square pl-action"></span></div>
        <div class="pl-swatch-item" data-header="Color">Action default</div>
        <div class="pl-swatch-item" data-header="Variable">
          <div class="select-all">$primary</div>
          <div class="select-all">$action</div>
        </div>
        <div class="pl-swatch-item select-all" data-header="Hex">#097d6c</div>
      </div>
      <div class="pl-swatch">
        <div class="pl-swatch-item pl-swatch-item-fw"><span class="pl-swatch-square pl-action-lighter"></span></div>
        <div class="pl-swatch-item" data-header="Color">Action lighter</div>
        <div class="pl-swatch-item" data-header="Variable">
          <div class="select-all">$primary-lighter</div>
          <div class="select-all">$action-lighter</div>
        </div>
        <div class="pl-swatch-item select-all" data-header="Hex">#0cb097</div>
      </div>
    </div>

    <h4 class="pl-pattern-subtitle">Brand</h4>
    <div class="pl-swatches">
      <div class="pl-swatch pl-swatch-header">
        <div class="pl-swatch-item"></div>
        <div class="pl-swatch-item">Color</div>
        <div class="pl-swatch-item">Variable</div>
        <div class="pl-swatch-item">Hex</div>
      </div>
      <div class="pl-swatch">
        <div class="pl-swatch-item pl-swatch-item-fw"><span class="pl-swatch-square pl-brand"></span></div>
        <div class="pl-swatch-item" data-header="Color">Rouge Montr√©al</div>
        <div class="pl-swatch-item" data-header="Variable">
          <div class="select-all">$brand</div>
          <div class="select-all">$primary-red</div>
        </div>
        <div class="pl-swatch-item select-all" data-header="Hex">#e00000</div>
      </div>
    </div>

    <h4 class="pl-pattern-subtitle">Neutral</h4>
    <div class="pl-swatches">
      <div class="pl-swatch pl-swatch-header">
        <div class="pl-swatch-item"></div>
        <div class="pl-swatch-item">Color</div>
        <div class="pl-swatch-item">Variable</div>
        <div class="pl-swatch-item">Hex</div>
      </div>
      <div class="pl-swatch">
        <div class="pl-swatch-item pl-swatch-item-fw"><span class="pl-swatch-square pl-neutral-primary"></span></div>
        <div class="pl-swatch-item" data-header="Color">Neutral primary</div>
        <div class="pl-swatch-item" data-header="Variable">
          <div class="select-all">$gray-900</div>
          <div class="select-all">$neutral-primary</div>
        </div>
        <div class="pl-swatch-item select-all" data-header="Hex">#212529</div>
      </div>
      <div class="pl-swatch">
        <div class="pl-swatch-item pl-swatch-item-fw"><span class="pl-swatch-square pl-neutral-primary-reverse"></span></div>
        <div class="pl-swatch-item" data-header="Color">Neutral primary reverse</div>
        <div class="pl-swatch-item" data-header="Variable">
          <div class="select-all">$white</div>
          <div class="select-all">$neutral-primary-reverse</div>
        </div>
        <div class="pl-swatch-item select-all" data-header="Hex">#ffffff</div>
      </div>
      <div class="pl-swatch">
        <div class="pl-swatch-item pl-swatch-item-fw"><span class="pl-swatch-square pl-neutral-secondary"></span></div>
        <div class="pl-swatch-item" data-header="Color">Neutral secondary</div>
        <div class="pl-swatch-item" data-header="Variable">
          <div class="select-all">$gray 700</div>
          <div class="select-all">$neutral-secondary</div>
        </div>
        <div class="pl-swatch-item select-all" data-header="Hex">#637381</div>
      </div>
      <div class="pl-swatch">
        <div class="pl-swatch-item pl-swatch-item-fw"><span class="pl-swatch-square pl-neutral-tertiary"></span></div>
        <div class="pl-swatch-item" data-header="Color">Neutral tertiary</div>
        <div class="pl-swatch-item" data-header="Variable">
          <div class="select-all">$gray-500</div>
          <div class="select-all">$neutral-tertiary</div>
        </div>
        <div class="pl-swatch-item select-all" data-header="Hex">#adb5bd</div>
      </div>
      <div class="pl-swatch">
        <div class="pl-swatch-item pl-swatch-item-fw"><span class="pl-swatch-square pl-neutral-stroke"></span></div>
        <div class="pl-swatch-item" data-header="Color">Neutral stroke</div>
        <div class="pl-swatch-item" data-header="Variable">
          <div class="select-all">$gray-400</div>
          <div class="select-all">$neutral-stroke</div>
        </div>
        <div class="pl-swatch-item select-all" data-header="Hex">#ced4da</div>
      </div>
    </div>
  
  </div>
</div>
