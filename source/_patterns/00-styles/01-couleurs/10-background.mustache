<div class="pl-swatches-flex">
  <div class="pl-swatches-wrapper">

    <h4 class="pl-pattern-subtitle">Neutre (Neutral)</h4>
    <div class="pl-swatches">
      <div class="pl-swatch pl-swatch-header">
        <div class="pl-swatch-item"></div>
        <div class="pl-swatch-item">Couleur</div>
        <div class="pl-swatch-item">Variable</div>
        <div class="pl-swatch-item">Hex</div>
      </div>
      <div class="pl-swatch">
        <div class="pl-swatch-item pl-swatch-item-fw"><span class="pl-swatch-square pl-neutral-ground border"></span></div>
        <div class="pl-swatch-item" data-header="Couleur">Ground</div>
        <div class="pl-swatch-item select-all" data-header="Variable">$neutral-ground</div>
        <div class="pl-swatch-item select-all" data-header="Hex">#FFFFFF</div>
      </div>
      <div class="pl-swatch">
        <div class="pl-swatch-item pl-swatch-item-fw"><span class="pl-swatch-square pl-neutral-underground-1"></span></div>
        <div class="pl-swatch-item" data-header="Couleur">Underground 1</div>
        <div class="pl-swatch-item select-all" data-header="Variable">$neutral-underground-1</div>
        <div class="pl-swatch-item select-all" data-header="Hex">#f8f9fa</div>
      </div>
      <div class="pl-swatch">
        <div class="pl-swatch-item pl-swatch-item-fw"><span class="pl-swatch-square pl-neutral-underground-2"></span></div>
        <div class="pl-swatch-item" data-header="Couleur">Underground 2</div>
        <div class="pl-swatch-item select-all" data-header="Variable">$neutral-underground-2</div>
        <div class="pl-swatch-item select-all" data-header="Hex">#dee2e6</div>
      </div>
      <div class="pl-swatch">
        <div class="pl-swatch-item pl-swatch-item-fw"><span class="pl-swatch-square pl-neutral-ground-reversed"></span></div>
        <div class="pl-swatch-item" data-header="Couleur">Ground-reversed</div>
        <div class="pl-swatch-item select-all" data-header="Variable">$neutral-ground-reversed</div>
        <div class="pl-swatch-item select-all" data-header="Hex">#212529</div>
      </div>
      <div class="pl-swatch">
        <div class="pl-swatch-item pl-swatch-item-fw"><span class="pl-swatch-square pl-neutral-underground-1-reversed"></span></div>
        <div class="pl-swatch-item" data-header="Couleur">Underground 1-reversed</div>
        <div class="pl-swatch-item select-all" data-header="Variable">$neutral-underground-1-reversed</div>
        <div class="pl-swatch-item select-all" data-header="Hex">#191c1f</div>
      </div>
      <div class="pl-swatch">
        <div class="pl-swatch-item pl-swatch-item-fw"><span class="pl-swatch-square pl-neutral-underground-2-reversed"></span></div>
        <div class="pl-swatch-item" data-header="Couleur">Underground 2-reversed</div>
        <div class="pl-swatch-item select-all" data-header="Variable">$neutral-underground-2-reversed</div>
        <div class="pl-swatch-item select-all" data-header="Hex">#111315</div>
      </div>
    </div>

    <h4 class="pl-pattern-subtitle">Surbrillance (Highlight)</h4>
    <div class="pl-swatches">
      <div class="pl-swatch pl-swatch-header">
        <div class="pl-swatch-item"></div>
        <div class="pl-swatch-item">Couleur</div>
        <div class="pl-swatch-item">Variable</div>
        <div class="pl-swatch-item">Hex</div>
      </div>
      <div class="pl-swatch">
        <div class="pl-swatch-item pl-swatch-item-fw"><span class="pl-swatch-square pl-highlight-focus border"></span></div>
        <div class="pl-swatch-item" data-header="Couleur">Highlight-focus</div>
        <div class="pl-swatch-item select-all" data-header="Variable">$highlight-focus</div>
        <div class="pl-swatch-item select-all" data-header="Hex">#98bcde</div>
      </div>
      <div class="pl-swatch">
        <div class="pl-swatch-item pl-swatch-item-fw"><span class="pl-swatch-square pl-highlight-focus-reversed border"></span></div>
        <div class="pl-swatch-item" data-header="Couleur">Highlight-focus-reversed</div>
        <div class="pl-swatch-item select-all" data-header="Variable">$highlight-focus-reversed</div>
        <div class="pl-swatch-item select-all" data-header="Hex">#ffffff</div>
      </div>
      <div class="pl-swatch">
        <div class="pl-swatch-item pl-swatch-item-fw"><span class="pl-swatch-square pl-highlight-light"></span></div>
        <div class="pl-swatch-item" data-header="Couleur">Highlight light</div>
        <div class="pl-swatch-item select-all" data-header="Variable">$highlight-light</div>
        <div class="pl-swatch-item select-all" data-header="Hex">#eefaf8</div>
      </div>
      <div class="pl-swatch">
        <div class="pl-swatch-item pl-swatch-item-fw"><span class="pl-swatch-square pl-highlight-strong"></span></div>
        <div class="pl-swatch-item" data-header="Couleur">Highlight strong</div>
        <div class="pl-swatch-item select-all" data-header="Variable">$highlight-strong</div>
        <div class="pl-swatch-item select-all" data-header="Hex">#d0f3ee</div>
