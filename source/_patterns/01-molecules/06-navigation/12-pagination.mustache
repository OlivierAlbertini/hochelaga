<nav aria-label="Pagination">
  <ul class="pagination {{ paginationClass }}">
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Previous">
        {{> atoms-fonticon-item(icon-label: "chevron-gauche") }}
        <span class="sr-only">Previous</span>
      </a>
    </li>
  {{# paginationList }}
    <li class="page-item {{ class }}"><a class="page-link" href="{{ url}}">{{ text }}</a></li>
  {{/ paginationList }}
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Next">
        {{> atoms-fonticon-item(icon-label: "chevron-droite") }}
        <span class="sr-only">Next</span>
      </a>
    </li>
  </ul>
</nav>