
{{# promoter-teaser}}
<div class="row">
  <div class="col-12 col-md-4 col-lg-3 mb-4 mb-md-0">
    {{# logo}}
    <a href="{{ url }}" class="img-link">
      <img class="img-fluid px-0 px-md-4" src="{{ src }}" alt="{{ alt }}">
    </a>
    {{/ logo}}
  </div>
  <div class="col-12 col-md-8 col-lg-9">
    <div class="row">
      <div class="col-12 col-lg-7">
        <div class="">
          <span class="d-block mb-4">
            <a href="{{ name.url }}">{{ name.title }}</a>
          </span>
          <p>{{ description }}</p>
        </div>
      </div>
      <div class="col-12 col-lg-5">
      {{# informations}}
        <div class="sidebar sb-block">
          {{> atoms-text-icons-list}}
          {{> atoms-social-media-icons-list}}
        </div>
      {{/ informations}}
      </div>
    </div>
  </div>
</div>
{{/ promoter-teaser}}
