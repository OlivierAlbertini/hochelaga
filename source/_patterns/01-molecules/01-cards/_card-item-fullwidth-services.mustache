<div class="card card-services {{ classes }}">
  <span class="card-icon-top {{ card-media.classes }} vdm {{ card-media.icon }}" aria-hidden="true"></span>
<svg class="card-menu" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
  <path fill="#212529" fill-rule="evenodd" d="M12,8 C10.8954305,8 10,7.1045695 10,6 C10,4.8954305 10.8954305,4 12,4 C13.1045695,4 14,4.8954305 14,6 C14,7.1045695 13.1045695,8 12,8 Z M12,14 C10.8954305,14 10,13.1045695 10,12 C10,10.8954305 10.8954305,10 12,10 C13.1045695,10 14,10.8954305 14,12 C14,13.1045695 13.1045695,14 12,14 Z M12,20 C10.8954305,20 10,19.1045695 10,18 C10,16.8954305 10.8954305,16 12,16 C13.1045695,16 14,16.8954305 14,18 C14,19.1045695 13.1045695,20 12,20 Z"/>
</svg>
  <div class="card-body">
    <div class="flex-content">
      {{# card-title }}
      <span class="card-title">{{ card-title }}</span>
      {{/ card-title }}

      {{# card-text }}
      <div class="card-text">{{{ card-text }}}</div>
      {{/ card-text }}
    </div>
    
    <div class="flex-content">
      {{# card-id }}
        <div class="card-id">
          <span class="card-id-text">{{{text}}}</span> 
          <span>{{{id}}}</span>
        </div>
      {{/ card-id }}

      {{# card-date }}
        <div class="card-date">
        {{# card-date-time}}
          <span>{{{text}}}</span> 
          <time datetime="{{dateTimeFormat}}">{{{dateTimeText}}}</time>
        {{/ card-date-time}}
        </div>
      {{/ card-date }}
    </div>

    {{# card-badge-after }}
    {{> atoms-badge }}
    {{/ card-badge-after }}
  </div>
</div>
