  {{> patterns-content-header-profile }}

  <!-- Begin main-content region-->
  <div class="region-content {{ regionMainClasses }}">
    <div class="container {{ regionMainContainerClasses }}">
      <div class="row">
        <article class="col-12 {{ regionMainContentClasses }}">
          <div class="page-section pt-0">
            <h2 class="section-heading">Rôles et responsabilités</h2>
            {{# cards-roles }}
            <div class="cards">
              {{# cards.card-item }}
                {{> components-card-item}}
              {{/ cards.card-item }}
            </div>
            {{/ cards-roles }}
          </div>
          {{# section-responsabilites }}
          <div class="page-section pt-0">
            <h2 class="section-heading">Autres responsabilités</h2>
            {{> components-list-group }}
          </div>
          {{/ section-responsabilites }}
        </article>
        <aside class="col-12 col-lg-5 col-xl-4" role="complementary">
          {{> patterns-sidebar-block-coordinates }}
        </aside>
      </div>
    </div>
  </div>

  {{# hasFeedbackForm}}
  {{> patterns-feedback-form}}
  {{/ hasFeedbackForm }}
</main>

{{> patterns-footer-portal }}
