{{> styles-skip-links-section }}

<header class="header-main-nav {{# navbarFixedTop}}is-fixed-top{{/navbarFixedTop}}">
{{> components-navbar }}
</header>

<main class="main-content {{ pageClasses }}" id="main-content" aria-label="Main Content" role="main">

  <div class="container pt-4 pt-lg-8">
    <div class="row{{^ sidebarRight }} justify-content-center{{/ sidebarRight}}">
      <div class="col-12{{^ sidebarRight }} col-lg-7{{/ sidebarRight}}">
        {{> components-breadcrumbs}}
      </div>
    </div>
  </div>
  
  {{# documentHeading}}
  <div class="mb-4 mb-lg-0">
  {{> patterns-content-header}}
  </div>
  {{/ documentHeading}}

  <div class="region-content pt-0">

    <div class="container">

      <section class="row{{# sidebarRight }} justify-content-between{{/ sidebarRight}}{{^ sidebarRight}} justify-content-center{{/ sidebarRight}}">
        <div class="col-12 col-lg-7">
          <header class="content-header">

            <h1>{{ heading }}</h1>

            {{> patterns-content-header-extras}}

          </header>
          
          <div class="lead">
            {{{ lead }}}
          </div>
          
          {{# module-anchors}}
          <div class="mb-8">
            {{> patterns-sommaire-navigation}}
          </div>
          {{/ module-anchors}}

          {{# module-volets}}
          {{> templates-citoyens-content-programme}}
          {{/ module-volets}}
          
          <div class="content-modules">
            {{# module-reglements}}
            <div class="content-module-stacked">
              <h2>Règlements</h2>
              {{> components-list-item-link }}
            </div>
            {{/ module-reglements}}

            {{# module-partners}}
            <div class="content-module-stacked">
              <h2>Partenaires</h2>
              {{{ partnerText }}}
              {{# listPartners}}
              <ul {{# hasLogos}}class="mt-0 list-inline"{{/ hasLogos}}>
                {{# listPartners.items }}
                <li {{# hasLogos}}class="list-inline-item"{{/ hasLogos}}>
                  {{# hasLogos}}<img src="{{ src }}" alt="{{ alt }}" class="img-fluid" />{{/hasLogos}}
                  {{^hasLogos}}{{ partnerName }}{{/ hasLogos}}
                </li>
                {{/ listPartners.items }}
              </ul>
              {{/ listPartners}}
            </div>
            {{/ module-partners}}
          </div>

          {{# module-etiquette}}
          <div class="badges-container mb-7">
            <h2 class="mb-0 sr-only">Étiquettes</h2>
            <ul class="list-inline">
            {{# badges-links }}
              <li class="list-inline-item">
              {{> components-badge }}
              </li>
            {{/ badges-links }}
            </ul>
          </div>
          {{/ module-etiquette}}

        </div>

        {{# sidebarRight}}
        <aside class="col-12 col-lg-4" role="complementary">
          {{> templates-citoyens-sidebar-programme}}
        </aside>
        {{/ sidebarRight}}

      </section>

      <section class="row{{# sidebarRight }} justify-content-between{{/ sidebarRight}}{{^ sidebarRight}} justify-content-center{{/ sidebarRight}}">
        <div class="col-12 col-lg-7">
        {{> components-feedback-form}}
        </div>
      </section>

    </div>
  </div>
</main>

{{> patterns-footer-main }}
