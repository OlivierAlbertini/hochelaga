{{> styles-skip-links-section }}

<header class="header-main-nav {{# navbarFixedTop}}is-fixed-top{{/navbarFixedTop}}">
{{> components-navbar }}
</header>

<main class="main-content {{ pageClasses }}" id="main-content" aria-label="Main Content" role="main">

  {{# messageBar}}
  {{> components-message-bar}}
  {{/ messageBar}}

  <div class="container pt-4 pt-lg-8">
    <div class="row{{^ sidebarRight}}{{^documentHeading}} justify-content-center{{/documentHeading}}{{/ sidebarRight}}">
      <div class="col-12 col-lg-7">
        {{> components-breadcrumbs}}
      </div>
    </div>
  </div>

  {{# documentHeading}}
  <div class="mb-4 mb-lg-0">
  {{> patterns-content-header}}
  </div>
  {{/ documentHeading}}

  <div class="region-content pt-0">

    <div class="container">

      <div class="row {{# sidebarRight }} d-md-block clearfix{{/ sidebarRight}}{{^ sidebarRight}} justify-content-center{{/ sidebarRight}}">
        <div class="col-12 col-lg-7 float-left">
          <header class="content-header">

            {{# state}}
            <div class="d-flex mb-2">
              {{> components-badge }}
            </div>
            {{/ state}}

            <h1>{{ heading }}</h1>

            {{> patterns-content-header-extras}}

            {{# header-extras}}
            {{> components-list-item}}
            {{/ header-extras}}

          </header>
        </div>
        {{# sidebarRight}}
        <div class="col-12 col-lg-4 float-right">
          {{> templates-citoyens-sidebar-lieu}}
        </div>
        {{/ sidebarRight}}
        <div class="col-12 col-lg-7 float-left">
          {{# lead}}
          <div class="lead">
          {{{ lead }}}
          </div>
          {{/ lead}}

          {{# module-content}}
          <div class="content-modules">
          {{> templates-citoyens-lieu-content}}
          </div>
          {{/ module-content}}
        </div>
      </div>

      <section class="row{{# sidebarRight }} justify-content-between{{/ sidebarRight}}{{^ sidebarRight}} justify-content-center{{/ sidebarRight}}">
        <div class="col-12 col-lg-7">
        {{> components-feedback-form}}
        </div>
      </section>

    </div>
  </div>
</main>

{{> patterns-footer-main }}

{{# module-content.module-map.cards.card-item}}
<script>
  window.addEventListener('load', function() {
    var data = {
      address : "{{{card-media.map.location.addressInfos.address}}}",
      title : "{{{card-media.map.location.addressInfos.addressTitle}}}",
      uri: "{{{card-media.map.location.addressInfos.uri}}}"
    }
    generateMap([{{{ card-media.map.location.lngLat }}}], data, '{{ card-media.map.location.mapID }}', {{ card-media.map.location.showZoom}});
  })
</script>
{{/ module-content.module-map.cards.card-item}}
