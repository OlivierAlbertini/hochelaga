{{> styles-link-skip-to-main-content }}

<header class="header-main-nav" role="banner">
{{> components-navbar }}
</header>

<main class="main-content {{ pageClasses }}" id="main-content" aria-label="Main Content" role="main">

  {{# documentHeading}}
  {{> patterns-content-header}}
  {{/ documentHeading}}

  <div class="region-content pt-3 pt-lg-0 pb-0">
    <div class="container {{ regionMainContainerClasses }}">
      <div class="row justify-content-between">

        <div class="col-12 col-lg-7">
          <div class="content-header">

            {{# linkedTo}}
            <div class="mb-4">
              <div class="font-size-sm-interface">
                <span class="mr-1">Relié à</span><a href="{{url}}">{{label}}</a>
              </div>
            </div>
            {{/ linkedTo}}

            {{# module-message }}
            <div class="mb-8">
              {{> components-alert}}
            </div>
            {{/ module-message }}

            <div class="lead">
              {{{ lead }}}
            </div>
          </div>

          {{# topRequested }}
          <div class="mb-8 d-lg-none">
            <h2>Les plus demandés</h2>
            {{> components-list-item-link}}
          </div>
          {{/ topRequested}}

          {{# hub-list}}
          <div class="mb-8"> 
            <h2>{{ hub-list-heading}}</h2>
            {{> components-list-item-link}}
          </div>
          {{/ hub-list}}

          {{# bodyText}}
          <div class="content-modules mb-0">
            <div class="content-module-stacked mb-8">
              <h2>Section optionnelle pour les collectrices éditoriales</h2>
