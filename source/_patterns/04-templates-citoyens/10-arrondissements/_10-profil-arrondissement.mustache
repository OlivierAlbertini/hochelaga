<main class="main-content {{ pageClasses }}" id="main-content" aria-label="Main Content">

  {{> organisms-content-header }}

  {{# has-nav-anchors }}
  {{> molecules-nav-anchors }}
  {{/ has-nav-anchors }}

  <!-- Begin main-content region-->
  <article id="navTop" class="region-content {{ regionMainClasses }}">
    <div class="container {{ regionMainContainerClasses }}">
      <div class="row">
        <div class="col-12">
          <!-- Teaser -->
          {{# has-lead-text }}
          <div class="lead">{{{ lead-text }}}</div>
          {{/ has-lead-text }}
        </div>
      </div>
      {{# show-hide-description}}
