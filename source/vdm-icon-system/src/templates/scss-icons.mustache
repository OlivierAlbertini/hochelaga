{{#svgs}}
$data-icon-{{{name}}}: "{{{inline}}}"; 
{{/svgs}}

{{#svgs}}
.icon-{{{name}}} {
	&:before {
		-webkit-mask: url($data-icon-{{{name}}}) no-repeat 50% 50%;
		mask: url($data-icon-{{{name}}}) no-repeat 50% 50%;
    -webkit-mask-size: cover;
    mask-size: cover;
		width: {{{width}}};
		height: {{{height}}};
    content: '';
    display: inline-block;
    background-color: $neutral-tertiary;
	}
}
{{/svgs}}